{
  "name": "web3-casino",
  "type": "module",
  "workspaces": [
    "Contracts",
    "Contract-hooks"
  ],
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@chakra-ui/react": "^3.19.1",
    "@colyseus/command": "^0.3.1",
    "@colyseus/monitor": "^0.15.8",
    "@colyseus/schema": "^2.0.36",
    "@colyseus/ws-transport": "^0.15.2",
    "@emotion/react": "^11.13.3",
    "@openzeppelin/contracts": "^5.3.0",
    "@rainbow-me/rainbowkit": "^2.2.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@vitejs/plugin-react": "^4.3.3",
    "axios": "^1.7.7",
    "cannon": "^0.6.2",
    "colyseus": "^0.15.17",
    "colyseus.js": "^0.15.26",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dat.gui": "^0.7.9",
    "ethers": "^6.13.4",
    "express": "^4.21.1",
    "gltfpack": "^0.22.0",
    "gsap": "^3.13.0",
    "howler": "^2.2.4",
    "html-webpack-plugin": "^5.6.3",
    "jsonwebtoken": "^9.0.2",
    "meshoptimizer": "^0.22.0",
    "mongoose": "^8.8.1",
    "path": "^0.12.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "sass": "^1.80.1",
    "three": "^0.169.0",
    "vite": "^5.4.10",
    "wagmi": "^2.12.29",
    "web-vitals": "^2.1.4",
    "zustand": "^5.0.5"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "server:dev": "npx kill-port 2567 && nodemon Server",
    "server:start": "node Server",
    "contracts:deploy": "npm --prefix ./Contracts run deploy",
    "contracts:deploy:testnet": "npm --prefix ./Contracts run deploy:testnet",
    "contracts:start": "npm --prefix ./Contracts run start",
    "contracts:generate-typechain": "npm --prefix ./Contracts run build-typechain",
    "contract-hooks:generate": "npm --prefix ./Contract-hooks run generate",
    "optimize-model": "gltf-transform optimize Front/public/game-assets/models/world.glb Front/public/game-assets/models/world-geometry-optimized.glb",
    "optimize-textures-size": "gltf-transform resize Front/public/game-assets/models/world-geometry-optimized.glb Front/public/game-assets/models/world-geometry-optimized-size.glb --width 1024 --height 1024",
    "optimize-textures": "gltf-transform etc1s Front/public/game-assets/models/world.glb Front/public/game-assets/models/world-optimized.glb --quality 80 --effort 1 --no-mipmaps",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "eslint '**/*.{js,jsx,ts,tsx}' --fix",
    "contracts:build": "npm run contracts:deploy && npm run contracts:generate-typechain || true && npm run contract-hooks:generate",
    "wait-and-build": "wait-on http://localhost:8545 && npm run contracts:build && npm run start-apps",
    "start-apps": "concurrently -n BACKEND,FRONTEND -k \"npm run server:dev\" \"npm run dev\"",
    "dev:full": "concurrently -k -s first -n CONTRACTS, 'npm run contracts:start' 'npm run wait-and-build'"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@gltf-transform/cli": "^4.1.3",
    "@gltf-transform/core": "^4.1.3",
    "@gltf-transform/functions": "^4.1.3",
    "concurrently": "^9.2.0",
    "dotenv": "^16.5.0",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.2.0",
    "jsdom": "^26.1.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.3"
  }
}
